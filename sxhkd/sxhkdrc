#
# bspwm hotkeys
#

# bspwm quit
super + shift + q
	pkill -x panel; bspc quit

# window close
super + x
	bspc window -c

# window kill
super + shift + x
    bspc window -k

# desktop layout
# super + t
# 	bspc desktop -l next
super + {_,shift + }+ space
  bspc desktop -l {prev,next}

# desktop balance
super + ctrl + b
	bspc desktop -B

# toggle bar visible
super + b
  toggle_panel

# toggle all widow visibility
super + d
  bspc control --toggle-visibility

# window floating,fullscreen
super + {t,f}
	bspc window -t {floating,fullscreen}

# select last desktop,widnow
super + {grave,Tab}
	bspc {desktop,window} -f last

super + apostrophe
	bspc window -s last

# focus older,newer window under all desktops
super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

# swap with biggest window on current desktop
super + m
	bspc window -s biggest

# window focus,swap
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# window focus next,prev on current desktop
super + {_,shift + }c
	bspc window -f {next,prev}

# desktop leaves circulate
super + {comma,period}
	bspc desktop -C {backward,forward}

super + u
  bspc window -f *.urgent

# desktop focus
#
super + bracket{left,right}
	bspc desktop -f {prev,next}

super + {Left,Right}
  bspc desktop -f {prev,next}

super + {Up,Down}
  bspc desktop -f {prev,next}.occupied

# window preselect the splitting area
#
super + alt + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + alt + {_,shift + }space
	bspc {window -p cancel,desktop -c}

# window resize
#
super + ctrl + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,left +10}

super + ctrl  + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

# window spliting ratio
super + ctrl + {1-9}
	bspc window -r 0.{1-9}

# desktop focus, to-desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	xterm

super + p
	dmenu_run

super + r
  dmenu_run

# make sxhkd reload its configuration files:
super + ctrl + r
	pkill -USR1 -x sxhkd

super + {_,shift + }Print
  screenshot {full,window}

XF86AudioMute
  amixer -M set Master toggle

XF86Audio{Lower,Raise}Volume
  amixer -M set Master 1%{-,+}

XF86Audio{Play,Stop,Prev,Next}
  mpc {toggle,stop,prev,next}

